<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightYellow">

    <ScrollView
        android:id="@+id/donation_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/donation_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="@string/donation_id1"
            android:textAppearance="@style/txt_black_32"
            />

        <ImageView
            android:id="@+id/donation_img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/donation_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50sp"
            android:src="@drawable/character_youn"
            />

        <TextView
            android:id="@+id/donation_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/donation_name_id1"
            android:textAppearance="@style/txt_black_24"
            />

        <TextView
            android:id="@+id/donation_acount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_name1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/donation_acount_id1"
            android:textAppearance="@style/txt_black_24"
            />

        <ImageView
            android:id="@+id/donation_img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/donation_acount1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:src="@drawable/character_you"
            />

        <TextView
            android:id="@+id/donation_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_img2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/donation_name_id2"
            android:textAppearance="@style/txt_black_24"
            />

        <TextView
            android:id="@+id/donation_acount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_name2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/donation_acount_id2"
            android:textAppearance="@style/txt_black_24"
            />

        <ImageView
            android:id="@+id/donation_img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/donation_acount2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40sp"
            android:src="@drawable/character_ho"
            />

        <TextView
            android:id="@+id/donation_name3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_img3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/donation_name_id3"
            android:textAppearance="@style/txt_black_24"
            />

        <TextView
            android:id="@+id/donation_acount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/donation_name3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/donation_acount_id3"
            android:textAppearance="@style/txt_black_24"
            />

        <ImageView
            android:id="@+id/donation_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/logo"
            />

    </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>