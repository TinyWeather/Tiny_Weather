<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_header"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/user_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserID"
            android:fontFamily="@font/scdream3"
            android:textSize="20sp"
            android:layout_marginBottom="3dp"
            />

        <ImageView
            android:id="@+id/user_location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_ID"
            android:layout_alignTop="@id/user_location"
            android:layout_alignBottom="@id/user_location"
            android:src="@mipmap/ic_location_on_black_24dp"
            android:layout_marginRight="5dp"
            />

        <TextView
            android:id="@+id/user_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_ID"
            android:layout_toRightOf="@id/user_location_img"
            android:text="__시 __동"
            android:fontFamily="@font/scdream3"
            android:textSize="15sp"
            />

    </RelativeLayout>

</LinearLayout>