<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/some_id"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_color"
    >
    <TextView
        android:layout_width="93dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/location_id1"
        android:textAppearance="@style/location_id1"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.34sp"
        android:gravity="center_horizontal|top"
        android:fontFamily="@font/scdream3"
        />
    <TextView
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="@string/location_id2"
        android:textAppearance="@style/location_id2"
        android:lineSpacingExtra="5sp"
        android:translationY="-2.34sp"
        android:gravity="center_horizontal|top"
        android:fontFamily="@font/scdream3"
        />
</RelativeLayout>
