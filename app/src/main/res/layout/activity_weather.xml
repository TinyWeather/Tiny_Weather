                                android:layout_centerHorizontal="true"
                                android:text="28º"
                                android:textAppearance="@style/txt_black_15" />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/weather_list"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_below="@id/weather_day"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/graph_background_30"
                android:elevation="5dp">

                <View
                    android:id="@+id/weather_top"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/graph_top_30" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <LinearLayout
                        android:id="@+id/weather_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/weather_list_title_txt1"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/date_id1"
                            android:textAlignment="center"
                            android:textAppearance="@style/txt_black_18" />

                        <TextView
                            android:id="@+id/weather_list_title_txt2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/weather_id1"
                            android:textAlignment="center"
                            android:textAppearance="@style/txt_black_18" />

                        <TextView
                            android:id="@+id/weather_list_title_txt3"
                            android:layout_width="85dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            android:text="@string/weather_id2"
                            android:textAlignment="center"
                            android:textAppearance="@style/txt_black_18" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/weather_list1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/weather_top"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/weather_list1_txt1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:text="월요일 08.31"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/weather_list1_img1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/sun" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/weather_list1_txt2"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:text="26/32"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weather_list2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/weather_list1"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/weather_list2_txt1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:text="화요일 09.01"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/weather_list2_img1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/sun" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/weather_list2_txt2"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:text="28/30"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weather_list3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/weather_list2"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/weather_list3_txt1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:text="수요일 09.02"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/weather_list3_img1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/sun" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/weather_list3_txt2"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="20dp"
                        android:text="28/30"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/weather_list4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/weather_list3"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/weather_list4_txt1"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="20dp"
                        android:text="목요일 09.03"
                        android:textAlignment="center"
                        android:textAppearance="@style/txt_black_18" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/weather_list4_img1"
                            android:layout_width="50dp"
