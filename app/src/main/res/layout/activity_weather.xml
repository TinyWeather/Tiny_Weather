                </LinearLayout>

            </RelativeLayout>

            <!-- 스크롤 짤림 방지 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/weather_list"/>

        </RelativeLayout>

    </ScrollView>

