                        android:layout_height="100dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_weather_day1"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day1"
                                android:layout_centerHorizontal="true"
                                android:text="11시"
                                android:textAppearance="@style/txt_black_15" />

                            <TextView
                                android:id="@+id/txt2_weather_day1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_weather_day1"
                                android:layout_centerHorizontal="true"
                                android:text="28º"
                                android:textAppearance="@style/txt_black_15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_weather_day2"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day2"
                                android:layout_centerHorizontal="true"
                                android:text="12시"
                                android:textAppearance="@style/txt_black_15" />

                            <TextView
                                android:id="@+id/txt2_weather_day2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_weather_day2"
                                android:layout_centerHorizontal="true"
                                android:text="28º"
                                android:textAppearance="@style/txt_black_15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_weather_day3"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day3"
                                android:layout_centerHorizontal="true"
                                android:text="13시"
                                android:textAppearance="@style/txt_black_15" />

                            <TextView
                                android:id="@+id/txt2_weather_day3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_weather_day3"
                                android:layout_centerHorizontal="true"
                                android:text="28º"
                                android:textAppearance="@style/txt_black_15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_weather_day4"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day4"
                                android:layout_centerHorizontal="true"
                                android:text="14시"
                                android:textAppearance="@style/txt_black_15" />

                            <TextView
                                android:id="@+id/txt2_weather_day4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_weather_day4"
                                android:layout_centerHorizontal="true"
                                android:text="28º"
                                android:textAppearance="@style/txt_black_15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_weather_day5"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day5"
                                android:layout_centerHorizontal="true"
                                android:text="15시"
                                android:textAppearance="@style/txt_black_15" />

                            <TextView
                                android:id="@+id/txt2_weather_day5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/txt_weather_day5"
                                android:layout_centerHorizontal="true"
                                android:text="28º"
                                android:textAppearance="@style/txt_black_15" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:id="@+id/img_weather_day6"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day6"
                                android:layout_centerHorizontal="true"
                                android:text="16시"
                                android:textAppearance="@style/txt_black_15" />

                            <TextView
                                android:id="@+id/txt2_weather_day6"
