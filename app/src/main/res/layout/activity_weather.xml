<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color"
            >

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scdream3"
                android:text="@string/location_id1"
                android:textAppearance="@style/location_id1" />

            <TextView
                android:id="@+id/txt_location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/scdream3"
                android:text="@string/location_id2"
                android:textAppearance="@style/location_id2" />

            <ImageView
                android:id="@+id/img_weather"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/txt_location2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                app:srcCompat="@drawable/sun" />

            <TextView
                android:id="@+id/txt_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_weather"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scdream3"
                android:text="@string/weather_id1"
                android:textAppearance="@style/weather_id1" />

            <TextView
                android:id="@+id/txt_weather2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_weather"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/scdream3"
                android:text="@string/weather_id2"
                android:textAppearance="@style/weather_id2" />

            <TextView
                android:id="@+id/txt_weather3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_weather2"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/scdream3"
                android:text="@string/weather_id3"
                android:textAppearance="@style/weather_id3" />

            <RelativeLayout
                android:id="@+id/weather_bac"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/txt_weather3"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/weather_day"
                android:elevation="55dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/img_weather_day1"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day1"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/scdream3"
                                android:text="@string/weather_id1"
                                android:textAppearance="@style/weather_id2" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/img_weather_day2"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day2"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/scdream3"
                                android:text="@string/weather_id1"
                                android:textAppearance="@style/weather_id2" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/img_weather_day3"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day3"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/scdream3"
                                android:text="@string/weather_id1"
                                android:textAppearance="@style/weather_id2" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/img_weather_day4"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day4"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/scdream3"
                                android:text="@string/weather_id1"
                                android:textAppearance="@style/weather_id2" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/img_weather_day5"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day5"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/scdream3"
                                android:text="@string/weather_id1"
                                android:textAppearance="@style/weather_id2" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="100dp">

                            <ImageView
                                android:id="@+id/img_weather_day6"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/sun" />

                            <TextView
                                android:id="@+id/txt_weather_day6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/img_weather_day6"
                                android:layout_centerHorizontal="true"
                                android:fontFamily="@font/scdream3"
                                android:text="@string/weather_id1"
                                android:textAppearance="@style/weather_id2" />

                        </RelativeLayout>

                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="397dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="570dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/wether_table"
                >

                <View
                    android:id="@+id/weather_top"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/covid_graph_top"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월요일 08.31"
                        android:textSize="20dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/sun"
                        android:layout_marginLeft="170dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/dust7"
                        android:layout_marginLeft="260dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30/50"
                        android:textSize="20dp"
                        android:layout_marginLeft="350dp"
                        android:layout_marginTop="10dp"
                        />

                </RelativeLayout>

                <!-- margintop을 한줄 추가할때 마다 +65씩 해주면 간격이 맞는듯 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="110dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월요일 08.31"
                        android:textSize="20dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/sun"
                        android:layout_marginLeft="170dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/dust7"
                        android:layout_marginLeft="260dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30/50"
                        android:textSize="20dp"
                        android:layout_marginLeft="350dp"
                        android:layout_marginTop="10dp"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="175dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월요일 08.31"
                        android:textSize="20dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/sun"
                        android:layout_marginLeft="170dp"
                        />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/dust7"
                        android:layout_marginLeft="260dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30/50"
                        android:textSize="20dp"
                        android:layout_marginLeft="350dp"
                        android:layout_marginTop="10dp"
                        />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>