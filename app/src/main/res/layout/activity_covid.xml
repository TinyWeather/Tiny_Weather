<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CovidFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/covid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color">

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/location_id1"
                android:textAppearance="@style/txt_black_24" />

            <TextView
                android:id="@+id/txt_location2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_location"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/location_id2"
                android:textAppearance="@style/txt_black_36" />

            <TextView
                android:id="@+id/update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_location2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/update_time_id1"
                android:textAlignment="center"
                android:textAppearance="@style/txt_black_18" />

            <TextView
                android:id="@+id/update_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/update_time"
                android:layout_centerHorizontal="true"
                android:text="@string/update_time_id2"
                android:textAlignment="center"
                android:textAppearance="@style/txt_black_18" />

            <ImageView
                android:id="@+id/covid_img"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_below="@id/update_time2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/dust7" />

            <TextView
                android:id="@+id/covid_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/covid_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="보통"
                android:textAppearance="@style/txt_black_40" />

            <TextView
                android:id="@+id/address_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/covid_txt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/covid_id1"
                android:textAppearance="@style/txt_black_40" />

            <TextView
                android:id="@+id/address_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_txt"
                android:layout_centerHorizontal="true"
                android:text="@string/location_id3"
                android:textAppearance="@style/txt_black_30" />

            <RelativeLayout
                android:id="@+id/graph_background"
                android:layout_width="match_parent"
                android:layout_height="191dp"
                android:layout_below="@id/address_txt2"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/graph_background_45">

                <View
                    android:id="@+id/graph_top"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/graph_top_45"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <TextView
                        android:id="@+id/graph_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/location_id3"
                        android:textAppearance="@style/txt_black_25" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/covid_list"
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:layout_below="@id/graph_background"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/graph_background_45">

                <View
                    android:id="@+id/table_top"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/graph_top_45" />

                <TextView
                    android:id="@+id/txt_covid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/location_id4"
                    android:textAppearance="@style/txt_black_20" />

                <TextView
                    android:id="@+id/txt_covid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toStartOf="@id/txt_covid3"
                    android:layout_toEndOf="@id/txt_covid1"
                    android:text="@string/covid_id2"
                    android:textAlignment="center"
                    android:textAppearance="@style/txt_black_20" />

                <TextView
                    android:id="@+id/txt_covid3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/covid_id3"
                    android:textAppearance="@style/txt_black_20" />

            </RelativeLayout>

            <!-- 스크롤 짤림 방지 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_below="@+id/covid_list"/>

        </RelativeLayout>

    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>